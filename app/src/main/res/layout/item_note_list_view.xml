<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorNoteBackground"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_mono"
            android:textColor="#fff"
            android:maxLines="1"
            android:text="Title"
            android:textSize="16sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_mono"
            android:textColor="#fff"
            android:text="asdkl;sd;lfas;dfsad;fasdfl;asjdfl;asdjfsadfsdkafj;dalskdfja;slkdf;asdlfkja;sldfja;sdff;asdjfas;ldfkas;ldfkjas;lfd;alsdf;asjf;asldkfj;sadjf;as"/>


        <TextView
            android:id="@+id/dateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="12:16 25.05.1234"
            android:fontFamily="@font/roboto_mono"
            android:textColor="#ddd"/>
    </LinearLayout>


</android.support.v7.widget.CardView>